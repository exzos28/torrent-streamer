{
    "name": "torrent-streamer",
    "version": "1.0.0",
    "description": "Simple torrent streamer for magnet links",
    "main": "dist/presentation/http/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "prestart": "yarn build",
        "build": "tsc",
        "dev": "ts-node src/presentation/http/server.ts",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "vitest run src/presentation/http/__tests__/e2e.test.ts"
    },
    "dependencies": {
        "express": "^4.18.2",
        "webtorrent": "^1.8.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/supertest": "^6.0.3",
        "@types/webtorrent": "^0.110.1",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "@vitest/ui": "^4.0.17",
        "eslint": "^8.56.0",
        "supertest": "^7.2.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vitest": "^4.0.17"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}